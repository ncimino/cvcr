<% title @product.name %>

<div class="container">
  <div class="content-holder">
    <% if content_for?(:title) %>
      <h1><%= yield :title  %></h1>
      <hr />
    <% end %>

    <div class="row">
      <div class="span5 product-image">
        <%= image_tag(@product.image_handlers.first.image.url) %>
      </div>
      <div class="product-content">
        <h3 class="currency">
          <%= number_to_currency(@product.price, :unit => "$") %>
          <a class="btn btn-primary btn-large pull-right">
            Add to Cart
          </a>
        </h3>
        <hr class="lightrule" />
        <%= @product.description.html_safe %>
      </div>
    </div>
    <br />

  </div>
</div>