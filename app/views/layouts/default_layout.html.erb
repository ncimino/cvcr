<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= yield :title %></title>
  <%= yield :head %>
</head>
<body>
<div class="beans-bg"></div>
<div class="container">
  <%= yield :header %>
  <div class="row">
    <% flash.each do |key, value| %>
      <div id="notice" class="<%= key %> <%= key %>-block"><%= value %></div>
    <% end %>
    <div class="span12">
      <%= yield %>
    </div>
    <% if Rails.env.development? %>
      <div class="span12">
        <%= debug(params) %>
      </div>
    <% end %>
  </div>
</div>
<%= yield :footer %>
</body>
</html>
