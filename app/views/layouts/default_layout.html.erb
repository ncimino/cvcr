<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= yield :title %></title>
  <%= yield :head %>
</head>
<body>
<%= yield :header %>
<div class="container">
  <div class="row">
    <div>
      <div class="pull-right span4">
        <%= link_to logo, root_path %>
        <%= yield :sidebar %>
        <%= yield :userbar %>
      </div>
      <h1><%= yield :title  %></h1>
      <% flash.each do |key, value| %>
        <div id="notice" class="<%= key %> <%= key %>-block"><%= value %></div>
      <% end %>
    </div>
    <hr/>
    <div>
      <%= yield %>
    </div>
    <%= debug(params) if Rails.env.development? %>
  </div>
</div>
<%= yield :footer %>
</body>
</html>
